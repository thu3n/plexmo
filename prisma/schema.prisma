// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Server {
  id        String   @id @default(cuid())
  name      String
  baseUrl   String
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Setting {
  key   String @id
  value String
}

model AllowedUser {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String?  // Optional, just for display friendliness
  createdAt DateTime @default(now())
}

model MediaStatistics {
  id            String   @id // The Unified GUID (e.g. imdb://tt12345, plex://..., or slug)
  title         String
  year          Int?
  poster        String?
  type          String   // 'movie' or 'episode' or 'show'
  
  // Aggregate Metrics
  totalPlays    Int      @default(0)
  totalDuration Int      @default(0) // Seconds
  firstSeen     DateTime @default(now())
  lastSeen      DateTime @updatedAt
  
  meta_json     String?  // JSON for flexibility
}
